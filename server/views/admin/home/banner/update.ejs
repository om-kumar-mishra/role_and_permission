<%- include('../../../partials/header'); %>
    <%- include('../../../partials/sidebar'); %>
        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Update Banner</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Update Banner</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <a href="/get-banner-list" class="btn btn-primary">Back</a>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <% if (typeof successMessage !='undefined' && successMessage) { %>
                <p class="alert alert-success">
                    <%- successMessage %>
                </p>
                <% } else if(typeof errorMessage !='undefined' && errorMessage) { %>
                    <p class="alert alert-danger">
                        <%- errorMessage %>
                    </p>
                    <% } %>
                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">

                                    <div class="col-md-12">

                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">update Banner</h3>
                                            </div>

                                            <form id="bannerForm" action="/update-banner-store" method="POST"
                                                enctype="multipart/form-data">

                                                <div class="card-body">
                                                    <input type="hidden" name="id" value="<%= updateBanner.id %>">

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Title</label>
                                                        <input type="text" value="<%= updateBanner.title %> "
                                                            name="bannerTitle" class="form-control"
                                                            id="exampleInputEmail1" placeholder="Enter Bannner title">
                                                    </div>

                                                    <!-- <div class="form-group">
                                                        <label for="exampleInputEmail1">Banner Sub Title</label>
                                                        <input type="text" value="<%= updateBanner.sub_title %> " name="bannerSubTitle" class="form-control"
                                                            id="exampleInputEmail1" placeholder="Enter Banner  Sub  Title">
                                                    </div> -->

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">image</label>
                                                        <input type="file" name="image" class="form-control"
                                                            id="exampleInputEmail1" placeholder="Enter banner image">
                                                        <input type="hidden" value="<%= updateBanner.image %>"
                                                            name="oldImage">
                                                    </div>


                                                    <div>
                                                        <img style="max-height: 200px; min-height: 200px;"
                                                            src="/uploaded-files/<%= updateBanner.image %>">
                                                    </div>



                                                    <label for="exampleInputPassword1">details</label>
                                                    <div class="form-group">

                                                        <textarea name="details" id="details" class="form-control"
                                                            id="description" cols="20"
                                                            rows="5"><%- updateBanner.details %></textarea>
                                                    </div>

                                                    <div class="card-footer">
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </div>
                                            </form>
                                        </div>

                                    </div>


                                    <div class="col-md-6">
                                    </div>

                                </div>

                            </div>
                        </section>

        </div>
        <script>

            let d = CKEDITOR.replace('details');

        </script>
        <%- include('../../../partials/footer'); %>